<% provide(:title, @product.name) %>
<h1><%= @product.name %></h1>
<div class="row">
  <div class="col-xs-8">
    <%= @product.image %>
    <h4><%= @product.name %></h4>
    <%= @product.description %>
  </div>
  <div class="col-xs-4">
    <h5>Unit Price: <span style="color: green">
        <%= number_to_currency(@product.price) %>
      </span>
    </h5>
    <%= form_for current_user.carts.build do |f| %>
      <%= f.select(:quantity, options_for_select((1..5).to_a, 1)) %>
      <%= f.hidden_field :product_id, value: @product.id %>
      <%= f.submit "Add to Cart", class: "btn btn-success" %>
    <% end %>
  </div>
</div>
