<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Shopping Web", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "", root_path, class: "glyphicon glyphicon-home" %></li>
        <li><%= link_to "Help", help_path %></li>
        <% if user_signed_in? %>
        <li><%= link_to " Products", products_path, class: "glyphicon glyphicon-hdd" %></li>
        <li><%= link_to " Categories", categories_path, class: "glyphicon glyphicon-tasks" %></li>
        <li><%= link_to " Cart", carts_path, class: "glyphicon glyphicon-shopping-cart" %></li>
        <% if current_user.admin? %>
        <li><%= link_to "Users", users_path %></li>
        <li><%= link_to "Orders", orders_path %></li>
        <% end %>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            Account <span class="caret"></span>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to "Profile", current_user %></li>
            <li><%= link_to "Settings", edit_user_registration_path(current_user) %></li>
            <li>
              <%= link_to "Sign Out", destroy_user_session_path, method: "delete" %>
            </li>
          </ul>
        </li>
        <% else %>
        <li><%= link_to "Sign In", new_user_session_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
